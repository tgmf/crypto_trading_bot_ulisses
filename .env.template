# Environment variables for trading bot
# Copy this file to .env and fill in your API keys

# Environment (development, testing, production)
ENVIRONMENT=development
MAX_MEMORY=16000
CHUNK_SIZE=100000

# Exchange API Keys - format is EXCHANGE_API_KEY, EXCHANGE_API_SECRET, etc.
# The EXCHANGE var determines which exchange is used as primary
BINANCE_API_KEY=YOUR_API_KEY_HERE
BINANCE_API_SECRET=YOUR_SECRET_HERE
BINANCE_TESTNET=true

KRAKEN_API_KEY=YOUR_API_KEY_HERE
KRAKEN_API_SECRET=YOUR_SECRET_HERE

KUCOIN_API_KEY=YOUR_API_KEY_HERE
KUCOIN_API_SECRET=YOUR_SECRET_HERE
KUCOIN_PASSPHRASE=YOUR_PASSPHRASE_HERE
KUCOIN_TESTNET=true